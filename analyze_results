import sys, json
import itertools
from humanfriendly import format_timespan

results = []

files = sys.argv[1:]
if len(files) == 0:
    results += json.load(sys.stdin)['results']
else:
    for file in files:
        with open(file) as f:
           results += json.load(f)["results"]

def get_file(r):
    return r["parameters"]["file"]
def get_mode(r):
    return r["parameters"]["mode"]

def get_result_with_mode(rs, mode):
    matches = list(filter(lambda r: get_mode(r) == mode, rs))
    if len(matches) == 0:
        print(list(rs))
        raise f'Wat?'
    return matches[0]

def get_cores(r):
    return (r["user"] + r["system"]) / r["mean"]

def summarize(file, rs):
    manifold = get_result_with_mode(rs, "manifold")["mean"]
    cores = '%.1f' % get_cores(get_result_with_mode(rs, "manifold"))
    fastcsg = get_result_with_mode(rs, "fastcsg")["mean"]
    faster = '%.1f' % (fastcsg / manifold)
    return f'# {file}:\n\tmanifold: {format_timespan(manifold)} ({faster}x faster, {cores} cores)\n\tfast-csg: {format_timespan(fastcsg)}'

print('\n\n'.join([
    summarize(file, rs)
    for file, rs in [
      (file, list(rs)) for file, rs in itertools.groupby(sorted(results, key=get_file), get_file)
    ]
    if len(list(rs)) == 2
]) + '\n')
